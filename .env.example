# =============================================================================
# PondX Auto-Swapper Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: Never commit .env.local to version control!

# -----------------------------------------------------------------------------
# Solana RPC Configuration
# -----------------------------------------------------------------------------
# Default Solana RPC endpoint for transactions
# IMPORTANT: Use a reliable RPC provider for production (Helius, Alchemy, QuickNode)
#
# Helius (Recommended - Free tier: 100 req/s):
# Get your API key at: https://www.helius.dev/
# NEXT_PUBLIC_DEFAULT_RPC=https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY_HERE
#
# Public RPC (Unreliable, rate-limited, not recommended):
NEXT_PUBLIC_DEFAULT_RPC=https://api.mainnet.solana.com

# Jupiter Referral Program ID (for swap fee routing)
NEXT_PUBLIC_REFERRAL_PROGRAM_ID=JUP6LkbZbjS1jKKwapdHNy74zcZ3tLUZoi5QNyVTaV4

# -----------------------------------------------------------------------------
# AutoBot Swapper Defaults
# -----------------------------------------------------------------------------
# Default platform fee in basis points (100 = 1%, 50 = 0.5%)
NEXT_PUBLIC_DEFAULT_PLATFORM_FEE_BPS=100

# Default slippage tolerance in basis points (100 = 1%, 50 = 0.5%)
NEXT_PUBLIC_DEFAULT_SLIPPAGE_BPS=50

# Default source token (USDC)
NEXT_PUBLIC_DEFAULT_FROM_MINT=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v

# Default destination token (SOL)
NEXT_PUBLIC_DEFAULT_TO_MINT=So11111111111111111111111111111111111111112

# Default swap amount
NEXT_PUBLIC_DEFAULT_AMOUNT=0.01

# Default max amount for micro-randomized swaps
NEXT_PUBLIC_DEFAULT_MAX_AMOUNT=0.015

# Default number of swaps in auto-sequence
NEXT_PUBLIC_DEFAULT_AUTO_COUNT=10

# Default delay between auto-swaps (in milliseconds, 10000 = 10 seconds)
NEXT_PUBLIC_DEFAULT_AUTO_DELAY_MS=6000

# Default affiliate selection (pond0x | aquavaults)
NEXT_PUBLIC_DEFAULT_AFFILIATE=pond0x

# Mining Rig Configuration (Boost Mode)
# Default number of rounds for mining rig operation
NEXT_PUBLIC_DEFAULT_ROUNDS=3

# Default number of swaps per round
NEXT_PUBLIC_DEFAULT_SWAPS_PER_ROUND=18

# Default minimum amount for boost mode
NEXT_PUBLIC_DEFAULT_MIN_AMOUNT=0.01

# Default maximum amount for boost mode
NEXT_PUBLIC_DEFAULT_MAX_AMOUNT=0.02

# Default delay between swaps in boost mode (milliseconds)
NEXT_PUBLIC_DEFAULT_SWAP_DELAY_MS=6000

# Rewards Mode Configuration
# Default swap amount for rewards mode (USD)
NEXT_PUBLIC_DEFAULT_REWARDS_AMOUNT=10

# Default number of swaps for rewards mode
NEXT_PUBLIC_DEFAULT_REWARDS_SWAPS=5
